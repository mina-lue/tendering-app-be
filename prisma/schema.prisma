generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  VENDOR
  BUYER
  ADMIN
}

enum TenderStatus {
  OPEN
  CLOSED
  DRAFT
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  sex      String?
  urlToDoc String?
  phone    String
  approved Boolean @default(true)
  role     Role
  tenders  Tender[]
}

model Tender {
  id                  Int          @id @default(autoincrement())
  details             String
  organizationId      Int
  openAt              DateTime
  closeAt             DateTime
  document_buy_option Boolean
  urlToDoc            String?
  status              TenderStatus
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  organization User @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([openAt])
  @@index([closeAt])
}
